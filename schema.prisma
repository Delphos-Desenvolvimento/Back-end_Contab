generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model News {
  id        Int       @id @default(autoincrement())
  title     String
  content   String    @db.LongText
  category  String
  date      DateTime  @default(now())
  status    String    @default("rascunho")
  views     Int       @default(0)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  images    NewsImg[]

  @@map("news")
}

model Admin {
  id        Int      @id @default(autoincrement())
  user      String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model info {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model infoimg {
  id     Int @id @default(autoincrement())
  infoId Int
  imgId  Int
}

model NewsImg {
  id        Int      @id @default(autoincrement())
  newsId    Int
  altText   String?
  base64    String?  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  news      News     @relation(fields: [newsId], references: [id], onDelete: Cascade)

  @@index([newsId], name: "news_img_newsId_fkey")
  @@map("news_img")
}

model EventLog {
  id         Int      @id @default(autoincrement())
  type       String
  newsId     Int?
  path       String?
  userId     Int?
  userAgent  String?
  ip         String?
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("event_log")
}
