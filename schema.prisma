generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:senha123@192.168.0.126:3306/teste?schema=public"
}

model News {
  id        Int       @id @default(autoincrement())
  title     String
  content   String    @db.LongText
  category  String
  date      DateTime  @default(now())
  imageUrl  String?
  status    String    @default("rascunho")
  views     Int       @default(0)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  images    NewsImg[]

  @@map("news")
}

model Admin {
  id        Int      @id @default(autoincrement())
  user      String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model info {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
}

model infoimg {
  id     Int @id @default(autoincrement())
  infoId Int
  imgId  Int
}

model NewsImg {
  id        Int      @id @default(autoincrement())
  newsId    Int
  altText   String?
  base64    String?  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url       String?
  news      News     @relation(fields: [newsId], references: [id], onDelete: Cascade)

  @@index([newsId], name: "news_img_newsId_fkey")
  @@map("news_img")
}
